APP_NAME=Serbizyu
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

SCOUT_DRIVER=database

MEMCACHED_HOST=127.0.0.1

# Mail setup
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Pusher (optional for broadcasting)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Vite / Frontend
VITE_APP_NAME="${APP_NAME}"

# Payment Configuration
PAYMENT_MODE=test
XENDIT_API_KEY=xnd_development_xxxxxxxxxxxxx
XENDIT_WEBHOOK_TOKEN=whsec_xxxxxxxxxxxxx
XENDIT_SECRET_KEY=xnd_test_secret_key

# Payment Flow: true=pay first | false=pay later (service/offer creator setting)
PAY_FIRST_ENABLED=true

# Cash Payment Option: true=enable buyer/seller cash handshake
CASH_PAYMENT_ENABLED=true

# Platform fee percentage
PLATFORM_FEE_PERCENTAGE=5
